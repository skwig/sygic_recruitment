<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DepartmentSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar">
        <item name="android:elevation">3dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ToolbarThemeOverlay</item>
    </style>
</resources>
